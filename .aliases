# User specific aliases and functions
alias startx='choosex'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias verb='export VERB=1'
alias noverb='export VERB=0'
alias cd..='cd ..'
if [ `uname` == 'Darwin' ];
then
	alias ls='ls -G'
else
	alias ls='ls --color=always'
fi
alias lsa='ls -Ah'
alias lsl='ls -lh'
alias lsal='ls -lAh'
alias LS='ls'
alias ..='cd ..; ls'
alias eix-sync='sudo eix-sync'
alias sshurich='ssh -p 31416 mmcclure@urich'
alias sshwww='ssh mmcclure@ics.com'
alias ipodumount='kdeeject /dev/ipod'

