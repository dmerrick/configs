# os x only
if [ `uname` == 'Darwin' ];
then
  alias ls='ls -G'
else
  alias ls='ls --color=always'
fi

alias b='bundle exec'

alias lsa='ls -Ah'
alias lsl='ls -lh'
alias lsal='ls -lAh'
alias LS='ls'
alias cd..='cd ..'
alias ..="cd .. && ls"
alias ...="cd ../.. && ls"
alias ....="cd ../../.. && ls"
alias .....="cd ../../../.. && ls"
alias ......="cd ../../../../.. && ls"

