#!/bin/sh
# ~/.bash_prompt.sh

# color definitions
BLACK="\[\e[0;30m\]"
RED="\[\e[0;31m\]"
GREEN="\[\e[0;32m\]"
YELLOW="\[\e[0;33m\]"
BLUE="\[\e[0;34m\]"
PURPLE="\[\e[0;35m\]"
CYAN="\[\e[0;36m\]"
WHITE="\[\e[0;37m\]"

BBLACK="\[\e[1;30m\]"
BRED="\[\e[1;31m\]"
BGREEN="\[\e[1;32m\]"
BYELLOW="\[\e[1;33m\]"
BBLUE="\[\e[1;34m\]"
BPURPLE="\[\e[1;35m\]"
BCYAN="\[\e[1;36m\]"
BWHITE="\[\e[1;37m\]"
CLEAR="\[\e[0m\]" # return everything to default


function setprompt(){

if [ $? == 0 ]; then
	TIMEC="$GREEN"
	USERC="$PURPLE"
	PATHC="$CLEAR"
   else
	TIMEC="$RED"
	USERC="$RED"
	PATHC="$RED"
fi

case $HOSTNAME in
	greased-up-deaf-guy )
	HOSTC=$CYAN
	;;
	dmerrick-personal|bacon )
	HOSTC=$YELLOW
	;;
	dmerrick-work )
	HOSTC=$CYAN
	;;
	pancake )
	HOSTC=$BLUE
	;;
	*)
	HOSTC=$WHITE
	;;
esac

if [ $VERB == 1 ]; then
	PS1="${TIMEC}\@ ${USERC}\u@${HOSTC}\h ${PATHC}$PWD >${CLEAR} "
else
	PS1="${TIMEC}\@ ${USERC}\u@${HOSTC}\h ${PATHC}\W >${CLEAR} "
fi
}
export PROMPT_COMMAND=setprompt
